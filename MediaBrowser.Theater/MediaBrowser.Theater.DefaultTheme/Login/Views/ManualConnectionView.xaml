<UserControl x:Class="MediaBrowser.Theater.DefaultTheme.Login.Views.ManualConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:MediaBrowser.Theater.DefaultTheme.Login.ViewModels"
             xmlns:osk="clr-namespace:MediaBrowser.Theater.Presentation.Controls.Osk;assembly=MediaBrowser.Theater.Presentation"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:ManualConnectionViewModel}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}" Text="Add Server" Margin="50, 0, 0, 0"/>
        <TextBlock Grid.Row="1" Text="Please confirm the location of your server." Margin="50, 0, 0, 0"/>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Server host name or IP address:"/>
            <osk:TextField x:Name="AddressTextField" Text="{Binding ServerHost}"/>
            <TextBlock Text="Server port number:" Margin="0,20,0,0"/>
            <osk:TextField Text="{Binding ServerPort}"/>
            <Button Content="Connect" Command="{Binding ConnectCommand}" Margin="0,40,0,0"/>
        </StackPanel>
        
        <TextBlock Grid.Row="2" Visibility="{Binding HasConnectionFailed, Converter={StaticResource BooleanToVisibility}}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Text="Could not connect to the server. Please check your server details and your network connection." Foreground="Red"/>
        <TextBlock Grid.Row="2" Visibility="{Binding IsConnecting, Converter={StaticResource BooleanToVisibility}}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Text="Connecting..." Foreground="Green"/>
    </Grid>
</UserControl>

<!--                  Height="600" Background="{x:Null}" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Disabled"-->
<!--                  ItemContainerStyle="{StaticResource ContainerStyle}"-->
<!--                  Focusable="False"-->
<!--                  SelectedIndex="0">-->

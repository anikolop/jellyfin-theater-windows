<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:MediaBrowser.Theater.DefaultTheme.ViewModels"
                    xmlns:views="clr-namespace:MediaBrowser.Theater.DefaultTheme.Views">
    
    <DataTemplate DataType="{x:Type viewModels:RootViewModel}">
        <views:RootView/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewModels:HelloWorldViewModel}">
        <views:HelloWorldView/>
    </DataTemplate>
    
</ResourceDictionary>
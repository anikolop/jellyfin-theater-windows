                            <Style TargetType="{x:Type Path}">
                                <Setter Property="Fill" Value="{StaticResource ForegroundBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFavorited}" Value="True">
                                        <Setter Property="Fill" Value="#CC3333"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

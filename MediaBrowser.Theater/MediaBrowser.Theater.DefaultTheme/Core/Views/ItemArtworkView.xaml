<UserControl x:Class="MediaBrowser.Theater.DefaultTheme.Core.Views.ItemArtworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:MediaBrowser.Theater.Presentation.Controls;assembly=MediaBrowser.Theater.Presentation"
             xmlns:viewModels="clr-namespace:MediaBrowser.Theater.DefaultTheme.Core.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:ItemArtworkViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="{Binding ActualWidth}" Height="{Binding ActualHeight}">
        <controls:ExtendedContentControl Content="{Binding Image}" />
    </Grid>
</UserControl>

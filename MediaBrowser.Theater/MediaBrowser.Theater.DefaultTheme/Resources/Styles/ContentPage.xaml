<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:MediaBrowser.Theater.DefaultTheme.Controls">
    <Style TargetType="{x:Type controls:ContentPage}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ContentPage}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" MinHeight="{TemplateBinding HeaderHeight}"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto" MinHeight="{TemplateBinding FooterHeight}"/>
                        </Grid.RowDefinitions>
                        
                        <ContentPresenter Grid.Row="0" Content="{TemplateBinding Header}"/>
                        <ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}"/>
                        <ContentPresenter Grid.Row="2" Content="{TemplateBinding Footer}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="FontFamily">Segoe UI, Lucida Sans Unicode, Verdana</FontFamily>
    
    <system:Double x:Key="TitleFontSize">60</system:Double>
    <FontWeight x:Key="TitleFontWeight">Light</FontWeight>
    <SolidColorBrush x:Key="TitleFontForeground" Color="{DynamicResource ForegroundColor}"/>

    <system:Double x:Key="SubtitleFontSize">30</system:Double>
    <FontWeight x:Key="SubtitleFontWeight">SemiBold</FontWeight>
    <SolidColorBrush x:Key="SubtitleFontForeground" Color="{DynamicResource TextColor2}"/>

    <system:Double x:Key="HeadingFontSize">30</system:Double>
    <FontWeight x:Key="HeadingFontWeight">SemiBold</FontWeight>
    <SolidColorBrush x:Key="HeadingFontForeground" Color="{DynamicResource TextColor1}"/>

    <system:Double x:Key="LabelFontSize">15</system:Double>
    <FontWeight x:Key="LabelFontWeight">SemiBold</FontWeight>
    <SolidColorBrush x:Key="LabelFontForeground" Color="{DynamicResource ForegroundColor}"/>

    <system:Double x:Key="AccentedTextFontSize">22</system:Double>
    <FontWeight x:Key="AccentedTextFontWeight">SemiBold</FontWeight>
    <SolidColorBrush x:Key="AccentedTextFontForeground" Color="{DynamicResource AccentColor}"/>

    <system:Double x:Key="NormalTextFontSize">22</system:Double>
    <FontWeight x:Key="NormalTextFontWeight">Light</FontWeight>
    <SolidColorBrush x:Key="NormalTextFontForeground" Color="{DynamicResource ForegroundColor}"/>

    <system:Double x:Key="MinorTextFontSize">22</system:Double>
    <FontWeight x:Key="MinorTextFontWeight">Light</FontWeight>
    <SolidColorBrush x:Key="MinorTextFontForeground" Color="{DynamicResource TextColor1}"/>



    <!--Default font for text. Themes should override these as needed-->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI SemiLight, Lucida Sans Unicode, Verdana</FontFamily>
<!--    <FontFamily x:Key="DefaultFontFamily">pack://application:,,,/Resources/fonts/#Source Sans Pro</FontFamily>-->
    <FontWeight x:Key="DefaultFontWeight">Light</FontWeight>
    <SolidColorBrush x:Key="DefaultFontForeground" Color="{DynamicResource ForegroundColor}"/>
    <system:Double x:Key="DefaultFontSize">30</system:Double>

    <!--Default font for small text. Themes should override these as needed-->
    <FontFamily x:Key="SmallFontFamily">Segoe UI SemiLight, Lucida Sans Unicode, Verdana</FontFamily>
<!--    <FontFamily x:Key="SmallFontFamily">pack://application:,,,/Resources/fonts/#Source Sans Pro</FontFamily>-->
    <FontWeight x:Key="SmallFontWeight">Light</FontWeight>
    <SolidColorBrush x:Key="SmallFontForeground" Color="{DynamicResource ForegroundColor}"/>
    <system:Double x:Key="SmallFontSize">25</system:Double>

    <!--Default font for h1 headers. Themes should override these as needed-->
    <FontFamily x:Key="Heading1FontFamily">Segoe UI Light, Lucida Sans Unicode, Verdana</FontFamily>
<!--    <FontFamily x:Key="Heading1FontFamily">pack://application:,,,/Resources/fonts/#Source Sans Pro ExtraLight</FontFamily>-->
    <system:Double x:Key="Heading1FontSize">42</system:Double>
    <FontWeight x:Key="Heading1FontWeight">ExtraLight</FontWeight>
    <SolidColorBrush x:Key="Heading1FontForeground" Color="{DynamicResource ForegroundColor}"/>

    <!--Default font for h2 headers. Themes should override these as needed-->
    <FontFamily x:Key="Heading2FontFamily">Segoe UI Light, Lucida Sans Unicode, Verdana</FontFamily>
<!--    <FontFamily x:Key="Heading2FontFamily">pack://application:,,,/Resources/fonts/#Source Sans Pro ExtraLight</FontFamily>-->
    <system:Double x:Key="Heading2FontSize">38</system:Double>
    <FontWeight x:Key="Heading2FontWeight">ExtraLight</FontWeight>
    <SolidColorBrush x:Key="Heading2FontForeground" Color="{DynamicResource ForegroundColor}"/>

<!--    <FontFamily x:Key="Heading3FontFamily">pack://application:,,,/Resources/fonts/#Source Sans Pro ExtraLight</FontFamily>-->
    <FontFamily x:Key="Heading3FontFamily">Segoe UI SemiLight, Lucida Sans Unicode, Verdana</FontFamily>
    <system:Double x:Key="Heading3FontSize">16</system:Double>
    <FontWeight x:Key="Heading3FontWeight">Normal</FontWeight>
    <SolidColorBrush x:Key="Heading3FontForeground" Color="{DynamicResource ForegroundColor}"/>
</ResourceDictionary>
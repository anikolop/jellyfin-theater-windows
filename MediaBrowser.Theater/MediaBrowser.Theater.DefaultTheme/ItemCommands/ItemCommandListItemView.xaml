<UserControl x:Class="MediaBrowser.Theater.DefaultTheme.ItemCommands.ItemCommandListItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:MediaBrowser.Theater.DefaultTheme.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <controls:TileButton x:Name="Button" Command="{Binding ExecuteCommand}">
        <Grid Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ContentPresenter Grid.Column="0" Content="{Binding Icon}" Margin="4"/>
            <TextBlock Grid.Column="1" Text="{Binding Name}"/>
        </Grid>
    </controls:TileButton>
</UserControl>

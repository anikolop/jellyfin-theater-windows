<UserControl x:Class="MediaBrowser.Theater.DefaultTheme.Osd.Views.OsdSubtitleTracksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:playback="clr-namespace:MediaBrowser.Theater.Api.Playback;assembly=MediaBrowser.Theater.Api"
             xmlns:controls="clr-namespace:MediaBrowser.Theater.DefaultTheme.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             FocusManager.IsFocusScope="True"
             Focusable="False">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Background="{StaticResource BackgroundBrush}">
        <ItemsControl ItemsSource="{Binding Streams}" Margin="6" Focusable="False"/>
    </Grid>
</UserControl>

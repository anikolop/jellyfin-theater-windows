<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:loading="clr-namespace:MediaBrowser.Theater.Core.Loading;assembly=MediaBrowser.Theater.Core">

    <ControlTemplate x:Key="LoadingTemplate">
        <Grid>
            <loading:LoadingAnimation HorizontalAlignment="Center" VerticalAlignment="Center"></loading:LoadingAnimation>

            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="3" ScaleY="3" CenterX="0" CenterY="0" />
            </Grid.LayoutTransform>
        </Grid>
    </ControlTemplate>
    
</ResourceDictionary>
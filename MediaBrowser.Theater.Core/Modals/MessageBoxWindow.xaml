<controls2:BaseModalWindow x:Class="MediaBrowser.Theater.Core.Modals.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:controls2="clr-namespace:MediaBrowser.Theater.Presentation.Controls;assembly=MediaBrowser.Theater.Presentation"
                          Title="MessageBoxWindow" Style="{StaticResource ModalWindow}">

    <ContentControl Template="{StaticResource MessageBoxTemplate}">
        <ContentControl.LayoutTransform>
            <ScaleTransform ScaleX="{Binding Path=ContentScale}" ScaleY="{Binding Path=ContentScale}" CenterX="0" CenterY="0" />
        </ContentControl.LayoutTransform>
    </ContentControl>
</controls2:BaseModalWindow>

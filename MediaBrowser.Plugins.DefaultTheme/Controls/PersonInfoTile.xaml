            <TextBlock x:Name="TxtName" Foreground="White" Style="{DynamicResource TextBlockStyle}" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"></TextBlock>

            <TextBlock x:Name="TxtRole" Foreground="White" Margin="0 20 0 0" Style="{DynamicResource TextBlockStyle}" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"></TextBlock>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:MediaBrowser.Theater.Presentation.ViewModels;assembly=MediaBrowser.Theater.Presentation"
                    xmlns:controls="clr-namespace:MediaBrowser.Theater.Presentation.Controls;assembly=MediaBrowser.Theater.Presentation"
                    xmlns:details="clr-namespace:MediaBrowser.Plugins.DefaultTheme.Controls"
                    xmlns:details1="clr-namespace:MediaBrowser.Plugins.DefaultTheme.Details">

    <Style x:Key="DetailPageMenuListBoxItemStyle" TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource BaseListBoxItemStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <TextBlock Opacity=".25" x:Name="MenuText" Margin="40 0" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Text="{Binding DisplayName}" Style="{StaticResource Heading1TextBlockStyle}"></TextBlock>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter TargetName="MenuText" Property="Opacity" Value="1"/>
                            <Setter TargetName="MenuText" Property="Foreground" Value="{DynamicResource SelectedMenuItemForeground}"></Setter>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter TargetName="MenuText" Property="Opacity" Value="1"/>
                            <Setter TargetName="MenuText" Property="TextBlock.TextDecorations" Value="Underline"/>
                            <Setter TargetName="MenuText" Property="Foreground" Value="{DynamicResource SelectedMenuItemForeground}"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="DetailPageItemsFromItemByNameTemplate" DataType="{x:Type viewModels:ItemListViewModel}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <controls:ExtendedScrollViewer Grid.Row="0" Margin="0 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Center" CanContentScroll="True" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" >

                <controls:ScrollingPanel HorizontalAlignment="Stretch" CanHorizontallyScroll="True" CanVerticallyScroll="False">
                    <controls:ExtendedListBox Command="{Binding NavigateCommand}" Style="{StaticResource ListBoxStyle}" ItemsSource="{Binding ListCollectionView}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Disabled" ItemTemplate="{DynamicResource ListItemTemplate}" ItemContainerStyle="{StaticResource HighlightedBorderListBoxItemStyle}">
                        <controls:ExtendedListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemHeight="{Binding ItemContainerHeight}" ItemWidth="{Binding ItemContainerWidth}" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="80 20">
                                </WrapPanel>
                            </ItemsPanelTemplate>
                        </controls:ExtendedListBox.ItemsPanel>
                    </controls:ExtendedListBox>
                </controls:ScrollingPanel>
            </controls:ExtendedScrollViewer>

            <StackPanel Grid.Row="1" Margin="25 0 25 25" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentItem}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <details1:ItemLogo HorizontalAlignment="Center" VerticalAlignment="Center" DataContext="{Binding CurrentItem}" Height="80" MaxWidth="500" Margin="0 0 40 0"></details1:ItemLogo>

                <details:ItemInfoFooter HorizontalAlignment="Center" VerticalAlignment="Center" DataContext="{Binding CurrentItem}">
                </details:ItemInfoFooter>
            </StackPanel>

        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DetailPageSpecialFeaturesTemplate" DataType="{x:Type viewModels:ItemListViewModel}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>

            <controls:ExtendedScrollViewer Grid.Row="0" Margin="0 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Center" CanContentScroll="True" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" >

                <controls:ScrollingPanel HorizontalAlignment="Stretch" CanHorizontallyScroll="True" CanVerticallyScroll="False">
                    <controls:ExtendedListBox ItemsSource="{Binding ListCollectionView}" Command="{Binding NavigateCommand}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Style="{StaticResource ListBoxStyle}" ItemContainerStyle="{StaticResource HighlightedBorderListBoxItemStyle}" ScrollViewer.CanContentScroll="False" ItemTemplate="{DynamicResource ListItemTemplate}">
                        <controls:ExtendedListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="80 20"></StackPanel>
                            </ItemsPanelTemplate>
                        </controls:ExtendedListBox.ItemsPanel>
                    </controls:ExtendedListBox>
                </controls:ScrollingPanel>
            </controls:ExtendedScrollViewer>

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Style="{DynamicResource BoldHeaderTextBlock}" FontSize="45" Grid.Row="0" DataContext="{Binding CurrentItem}" HorizontalAlignment="Center" Text="{Binding DisplayName, Converter={controls:UpperCaseConverter}}" VerticalAlignment="Top" Margin="0 20 0 0" MaxWidth="1600">
                </TextBlock>

                <details:ItemInfoFooter Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" DataContext="{Binding CurrentItem}" Margin="0 35 0 0" ShowResumeProgress="false">
                    <details:ItemInfoFooter.Style>
                        <Style TargetType="{x:Type details:ItemInfoFooter}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </details:ItemInfoFooter.Style>
                </details:ItemInfoFooter>

                <TextBlock Grid.Row="2" DataContext="{Binding CurrentItem}" HorizontalAlignment="Center" Text="{Binding Overview}" VerticalAlignment="Top" Margin="0 35 0 0" MaxWidth="1600">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource ParagraphTextBlockStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Overview}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

            </Grid>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DetailPageSimilarItemsTemplate" DataType="{x:Type viewModels:ItemListViewModel}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>

            <controls:ExtendedScrollViewer Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Center" CanContentScroll="True" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" >

                <controls:ScrollingPanel HorizontalAlignment="Stretch" CanHorizontallyScroll="True" CanVerticallyScroll="False">
                    <controls:ExtendedListBox ItemsSource="{Binding ListCollectionView}" Command="{Binding NavigateCommand}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Style="{StaticResource ListBoxStyle}" ItemContainerStyle="{StaticResource HighlightedBorderListBoxItemStyle}" ScrollViewer.CanContentScroll="False" ItemTemplate="{DynamicResource ListItemTemplate}">
                        <controls:ExtendedListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="80 20"></StackPanel>
                            </ItemsPanelTemplate>
                        </controls:ExtendedListBox.ItemsPanel>
                    </controls:ExtendedListBox>
                </controls:ScrollingPanel>
            </controls:ExtendedScrollViewer>

            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Margin="0 -80 0 0">

                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentItem}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock DataContext="{Binding CurrentItem}" Style="{DynamicResource BoldHeaderTextBlock}" HorizontalAlignment="Center" Text="{Binding DisplayName, Converter={controls:UpperCaseConverter}}" VerticalAlignment="Center"></TextBlock>

                <details:ItemInfoFooter DataContext="{Binding CurrentItem}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 40 0 0">
                </details:ItemInfoFooter>

            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DetailPageEpisodesTemplate" DataType="{x:Type viewModels:ItemListViewModel}">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <StackPanel Orientation="Vertical">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentItem}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <details1:ItemImage DataContext="{Binding CurrentItem}" ImageType="EpisodeThumb" MaxHeight="320" Margin="0 25 0 20" HorizontalAlignment="Left"></details1:ItemImage>

                    <TextBlock Style="{StaticResource Heading2TextBlockStyle}" DataContext="{Binding CurrentItem}" Text="{Binding DisplayName}" Margin="0 0 0 0" MaxWidth="900"></TextBlock>

                    <Border Background="#999" Height="2" Margin="0 10 0 0"></Border>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Margin="0 10 0 0" DataContext="{Binding CurrentItem}" Text="{Binding Overview}" MaxHeight="290" Width="900"></TextBlock>

                    <details:ItemInfoFooter DataContext="{Binding CurrentItem}" ShowResumeProgress="False" Margin="0 30 0 0">
                    </details:ItemInfoFooter>

                </StackPanel>

            </Grid>

            <controls:ExtendedScrollViewer Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Right" CanContentScroll="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" >

                <controls:ScrollingPanel HorizontalAlignment="Stretch" CanHorizontallyScroll="False" CanVerticallyScroll="True">
                    <controls:ExtendedListBox ItemsSource="{Binding ListCollectionView}" Command="{Binding NavigateCommand}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Style="{StaticResource ListBoxStyle}" ItemContainerStyle="{StaticResource HighlightedListBoxItemStyle}" ScrollViewer.CanContentScroll="False" ItemTemplate="{DynamicResource ListPageListViewItemTemplate}">
                        <controls:ExtendedListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" Margin="50 20 30 20"></StackPanel>
                            </ItemsPanelTemplate>
                        </controls:ExtendedListBox.ItemsPanel>
                    </controls:ExtendedListBox>
                </controls:ScrollingPanel>
            </controls:ExtendedScrollViewer>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="MediaStreamTemplate" DataType="{x:Type viewModels:MediaStreamViewModel}">
        <Grid Background="#a6000000">

            <StackPanel Orientation="Horizontal" Margin="20">

                <TextBlock Style="{StaticResource TextBlockStyle}" Text="{Binding Type}" Width="150"></TextBlock>

                <ItemsControl ItemsSource="{Binding Attributes}" Focusable="False" Margin="0 0 50 0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"></WrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockStyle}" Foreground="{StaticResource MediaBrowserAccent}" x:Name="Delimiter" Text=" • "/>
                                <TextBlock Style="{StaticResource TextBlockStyle}" Text="{Binding .}"/>
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                    <Setter Property="Visibility" TargetName="Delimiter" Value="Collapsed"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DetailPageOverviewTemplate" DataType="{x:Type viewModels:ItemViewModel}">
        <Grid Margin="70 30 50 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"  VerticalAlignment="Top">

                <Image Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Left" MaxWidth="550" MaxHeight="650" Source="{Binding Image}">
                </Image>

                <TextBlock Foreground="{DynamicResource TextForegroundOverBackground}" Background="#c666C010" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="10 2 10 5" Text="NEW">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOffline}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsNew}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsPlayed}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsMissingEpisode}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsVirtualUnairedEpisode}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Background="#c666C010" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="{DynamicResource TextForegroundOverBackground}" Padding="10 2 10 5" Text="{Binding RecursiveUnplayedItemCount, StringFormat='{}{0} NEW'}">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SmallTextBlockStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOffline}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PlayedPercentage}" Value="0">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RecursiveUnplayedItemCount}" Value="0">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Background="{DynamicResource SpecialIndicatorBackground}" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="{DynamicResource TextForegroundOverBackground}" Padding="10 5" Text="OFFLINE">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SmallTextBlockStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOffline}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Background="{DynamicResource SpecialIndicatorBackground}" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="{DynamicResource TextForegroundOverBackground}" Padding="10 5" Text="MISSING">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SmallTextBlockStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMissingEpisode}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Background="{DynamicResource SpecialIndicatorBackground}" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="{DynamicResource TextForegroundOverBackground}" Padding="10 5" Text="UNAIRED">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SmallTextBlockStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsVirtualUnairedEpisode}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Grid Grid.Column="1" Margin="50 0 0 0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">

                    <Button x:Name="BtnResume"  Margin="0 0 10 0" Command="{Binding ResumeCommand}">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanResume}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle}">Resume</TextBlock>

                            <Grid x:Name="ProgressGrid" Margin="15 0 0 0">
                                <StackPanel Orientation="Horizontal">

                                    <StackPanel.Style>
                                        <Style TargetType="{x:Type StackPanel}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInProgress}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <ProgressBar Minimum="0" Maximum="150" Value="{Binding PlayedPercentage, Mode=OneWay}" Margin="3 5 0 0" Width="100" Height="24" Style="{DynamicResource ResumeProgressBar}" VerticalAlignment="Center">
                                    </ProgressBar>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnPlay" Command="{Binding PlayCommand}" Margin="0 0 10 0">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanPlay}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <TextBlock Style="{StaticResource TextBlockStyle}">Play</TextBlock>
                    </Button>

                    <Button Margin="0 0 10 0" Command="{Binding PlayTrailerCommand}">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasTrailer}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <TextBlock Style="{StaticResource TextBlockStyle}">Trailer</TextBlock>
                    </Button>

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0">

                    <Button Command="{Binding ToggleIsPlayedCommand}">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ImageButton}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanBeMarkedPlayed}" Value="true">

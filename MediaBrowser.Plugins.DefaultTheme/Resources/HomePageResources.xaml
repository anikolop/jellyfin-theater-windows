                <TextBlock x:Name="TxtName" Style="{DynamicResource TextBlockStyle}" Foreground="White"  Margin="10 5 10 10" Text="{Binding Name}"></TextBlock>

            </Grid>
        </Grid>
    </DataTemplate>


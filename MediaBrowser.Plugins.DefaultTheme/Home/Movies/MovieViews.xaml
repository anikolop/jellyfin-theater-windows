<UserControl x:Class="MediaBrowser.Plugins.DefaultTheme.Home.Movies.MovieViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls1="clr-namespace:MediaBrowser.Theater.Presentation.Controls;assembly=MediaBrowser.Theater.Presentation"
             xmlns:controls="clr-namespace:MediaBrowser.Plugins.DefaultTheme.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UniformGrid Rows="3">

        <controls1:ExtendedButton x:Name="BtnAllMovies" Style="{DynamicResource BaseItemButtonStyle}">
            <controls:MultiItemTile x:Name="AllMoviesTile"></controls:MultiItemTile>
        </controls1:ExtendedButton>

        <controls1:ExtendedButton x:Name="BtnBoxsets" Style="{DynamicResource BaseItemButtonStyle}">
            <controls:MultiItemTile x:Name="BoxsetsTile"></controls:MultiItemTile>
        </controls1:ExtendedButton>

        <controls1:ExtendedButton x:Name="BtnTrailers" Style="{DynamicResource BaseItemButtonStyle}">
            <controls:MultiItemTile x:Name="TrailersTile"></controls:MultiItemTile>
        </controls1:ExtendedButton>

    </UniformGrid>
</UserControl>
